


// ---------------------------------------
  // Project Typography
// ---------------------------------------

// Text alignment
.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

// Uppercase

.text-uppercase {
  text-transform: uppercase;
}

.text-highlight {
  font-family: $title-font;
}

// Text colours

.text-primary {
  color: $primary-colour;
}

.text-secondary {
  color: $secondary-colour;
}

.text-tertiary {
  color: $tertiary-colour;
}

// underline

.text-underline {
  border-bottom: 4px solid $primary-colour;
}
